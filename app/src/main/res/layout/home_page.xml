<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:id="@+id/frame"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">


        <ImageView
            android:layout_gravity="top|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="325dp"
            android:src="@drawable/homeimage"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="64sp"
            android:textColorHint="@color/purpletitle"
            android:hint="@string/titlehomepage"
            android:gravity="center" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="40sp"
            android:textColorHint="@color/purpletitle"
            android:hint="@string/phraseacroche"
            android:gravity="center"
            android:layout_marginTop="120dp"/>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/frame">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/circuit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="64sp"
                android:textColorHint="@color/purpletitle"
                android:hint="@string/circuit"
                android:gravity="center" />

        </LinearLayout>

    </FrameLayout>

    <androidx.appcompat.widget.Toolbar

        android:id="@+id/mytoolbar"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:elevation="4dp"
        android:theme="?attr/actionBarTheme"
        android:layout_alignParentBottom="true"
        android:title="@string/home"
        android:background="@color/purplelogo"


        />

</RelativeLayout>